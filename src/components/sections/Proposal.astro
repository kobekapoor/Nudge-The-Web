---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

import propImg from "../../assets/pics/proposal.png";
---

<Section>
  <Card>
    <div class="relative">
    <div class={`absolute -top-2 left-2 -right-2 bottom-2 border-2 border-stone-500 z-10`}></div>
    <div
      class="flex bg-[#F3F3F3] p-[60px] relative mt-[123px] mb-[163px] overflow-hidden"
    >
      <div class="w-full md:w-[40%] flex flex-col gap-[26px] z-10">
        <h2 class="text-3xl font-medium">Let's make things happen</h2>
        <p>
          Contact us today to learn more about how our digital marketing
          services can help your business grow and succeed online.
        </p>
        <a href="#contact" class="btn-primary text-center text-white">Contact Us Today</a>
      </div>
      <picture
        class="hidden md:flex absolute right-[-10%] lg:right-[-2%] top-[-15%] h-[450px] items-center justify-center z-0"
      >
        <Image
          src={propImg}
          alt="This is an illustration"
          class="hidden md:flex lg:h-full lg:w-auto"
        />
      </picture>
    </div>
  </div>
  </Card>
</Section>
