---
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Analytics and Reporting',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    image={{
      src: 'https://images.unsplash.com/photo-1543286386-2e659306cd6c?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxjb2xsZWN0aW9uLXBhZ2V8NXxyeF9MdjhXaDJIa3x8ZW58MHx8fHx8',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Scale Your Business With <br />
      <span class="text-secondary dark:text-accent highlight"> Analytics and Reporting</span>
    </Fragment>

    <Fragment slot="subtitle">
        We help businesses grow by providing them with the tools they need to succeed. Our team of experts will work with you to create a custom solution that fits your needs.
    </Fragment>
  </Hero>


  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="How We Manage Your Analytics and Reporting"
    subtitle="We provide a range of services to help you grow your business. Here are some of the ways we can help you:"
    columns={2}
    items={[
      {
        title: 'Data Analysis',
        description:
          'We help you make sense of your data by providing you with the tools you need to analyze it.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Reporting',
        description:
          'We provide you with the reports you need to make informed decisions about your business.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Advanced Google Analytics',
        description:
          'We help you set up and configure Google Analytics to track your website traffic and user behavior.',
        icon: 'tabler:brand-google-filled',
      },
      {
        title: 'Support',
        description:
          'We provide you with the support you need to make the most of your analytics and reporting tools.',
        icon: 'tabler:headset',
      },
      
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Why Analytics and Reporting Help Your Business Scale"
    subtitle="Analytics and reporting are essential tools for any business looking to grow. Here are some of the ways they can help you:"
    isReversed
    items={[
      {
        title: 'Track Your Progress:',
        description:
          'Analytics and reporting help you track your progress and see how your business is performing over time.',
      },
      {
        title: 'Identify Opportunities:',
        description:
          'By analyzing your data, you can identify opportunities for growth and make informed decisions about your business.',
      },
      {
        title: 'Improve Your Marketing:',
        description:
          'Analytics and reporting help you understand your customers and improve your marketing efforts.',
      },
      {
        title: 'Make Informed Decisions:',
        description:
          'By providing you with the data you need, analytics and reporting help you make informed decisions about your business.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1591696205602-2f950c417cb9?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxjb2xsZWN0aW9uLXBhZ2V8MnxyeF9MdjhXaDJIa3x8ZW58MHx8fHx8',
      alt: '',
    }}
  >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-accent dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps2
  title="Reach out to us"
  subtitle="Have questions? Feel free to contact us using the form below. We're here to help!"
  id="contact"
  callToAction={{
    text: 'Contact us',
    href: 'tel:+6141445061',
  }}
  items={[
    {
      title: 'Email us',
      type: 'email',
      description: 'hello@nudgetheweb.com',
      icon: 'tabler:mail',
    },
    {
      title: 'Call us',
      type: 'phone',
      description: '+61 0414 445 061',
      icon: 'tabler:headset',
    },
    {
      title: 'Come see us',
      type: 'text',
      description: '14 Commercial Rd, Kingsgrove, NSW 2208',
      icon: 'tabler:map-pin',
    },
  ]}
/>

</Layout>
