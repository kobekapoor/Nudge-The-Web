---
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Web Development',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    image={{
      src: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8d2Vic2l0ZXxlbnwwfHwwfHx8MA%3D%3D',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Scale Your Business With <br />
      <span class="text-secondary dark:text-accent highlight"> a Beautiful Website</span>
    </Fragment>

    <Fragment slot="subtitle">
        We design and develop websites that are tailored to your business needs. Our websites are fast, secure, and mobile-friendly.
    </Fragment>
  </Hero>


  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="How We Build"
    subtitle="We build websites that are fast, secure, and mobile-friendly. Here's how we do it:"
    columns={2}
    items={[
      {
        title: 'Design',
        description:
          'We design websites that are visually appealing and easy to navigate. Our websites are designed to convert visitors into customers.',
        icon: 'tabler:brush',
      },
        {
            title: 'Development',
            description:
            'We develop websites using the latest technologies and best practices. Our websites are fast, secure, and mobile-friendly.',
            icon: 'tabler:code',
        },
        {
            title: 'Testing',
            description:
            'We test websites on multiple devices and browsers to ensure they work perfectly for all users. Our websites are tested for speed, security, and performance.',
            icon: 'tabler:check',
        },
        {
            title: 'Launch',
            description:
            'We launch websites on secure and reliable servers. Our websites are monitored 24/7 to ensure they are always online and accessible.',
            icon: 'tabler:rocket',
        },
      
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="What Makes Our Websites Different?"
    subtitle=""
    isReversed
    items={[
      {
        title: 'Attribution Tracking:',
        description:
          'We track website visitors and conversions to help you understand how your website is performing. We provide detailed reports and analytics to help you make informed decisions.',
      },
        {
            title: 'Benefits:',
            description:
            'Our websites are designed to convert visitors into customers. We use the latest technologies and best practices to ensure your website is always online and accessible.',
        },
        {
            title: 'Features:',
            description:
            'Our websites are visually appealing and easy to navigate. We test websites on multiple devices and browsers to ensure they work perfectly for all users.',
        },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522542550221-31fd19575a2d?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTZ8fHdlYnNpdGV8ZW58MHx8MHx8fDA%3D',
      alt: '',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Quality features that actually help you scale
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-accent dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Pricing Widget ******************* -->

  <Pricing
    title="Flexible pricing"
    prices={[
      {
        title: 'Static Website',
        subtitle: 'Perfect for small businesses that need a simple website',
        price: 4999,
        period: '   ',
        callToAction: {
          target: '_blank',
          text: 'Get Started',
          href: 'tel:+6141445061',
        },
      },
    {
        title: 'Dynamic Website',
        subtitle: 'Ideal for businesses that need some interactivity and integrations on their website',
        price: 9999,
        period: '   ',
        callToAction: {
        target: '_blank',
        text: 'Get Started',
        href: 'tel:+6141445061',
        },
    },
    {
        title: 'E-commerce Website',
        subtitle: 'Great for businesses that need an online store',
        price: 14999,
        period: '   ',
        callToAction: {
        target: '_blank',
        text: 'Get Started',
        href: 'tel:+6141445061',
        },
    },
    ]}
  />

  <Steps2
  title="Reach out to us"
  subtitle="Have questions? Feel free to contact us using the form below. We're here to help!"
  id="contact"
  callToAction={{
    text: 'Contact us',
    href: 'tel:+6141445061',
  }}
  items={[
    {
      title: 'Email us',
      type: 'email',
      description: 'hello@nudgetheweb.com',
      icon: 'tabler:mail',
    },
    {
      title: 'Call us',
      type: 'phone',
      description: '+61 0414 445 061',
      icon: 'tabler:headset',
    },
    {
      title: 'Come see us',
      type: 'text',
      description: '14 Commercial Rd, Kingsgrove, NSW 2208',
      icon: 'tabler:map-pin',
    },
  ]}
/>

</Layout>
