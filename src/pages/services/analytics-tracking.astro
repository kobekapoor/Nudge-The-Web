interface BentoCard {
  imageSrc: any;
  imageAlt: string;
  heading: string;
  title: string;
  description: string;
  /** e.g. "lg:col-span-3", "lg:col-span-2" */
  gridColClass: string;
  /** e.g. "object-left", "object-right" */
  objectPosition?: string;
}

interface BentoProps {
  title: string;
  subtitle: string;
  cards: BentoCard[];
}

interface ContentProps {
  title: string;
  subtitle: string;
  description: string;
  paragraph1: string;
  cards: {
    icon: any;
    title: string;
    body: string;
  }[];
  paragraph2: string;
  subheading: string;
  paragraph3: string;
  testimonial?: {
    quote: string;
    name: string;
    role: string;
  };
}

